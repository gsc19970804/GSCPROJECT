<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFFFFF07"
        android:gravity="center"
        android:text="请输入信息"
        android:textColor="#FF383535"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <EditText
            android:id="@+id/address_address"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="请输入地址" />

        <EditText
            android:id="@+id/address_phone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/address_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="请输入您的姓名" />

        <EditText
            android:id="@+id/address_name"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/address_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:hint="请输入您的电话" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qvxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#ff00"
            android:textSize="20sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="#FF5068E1"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>